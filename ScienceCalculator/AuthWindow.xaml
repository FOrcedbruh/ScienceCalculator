<Window x:Class="ScienceCalculator.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceCalculator"
        mc:Ignorable="d"
        Icon="https://img.icons8.com/color/512/apple-calculator.png"
        Title="Авторизация" Height="400" Width="300">
    <Grid Background="#000">
        <Border Margin="10" Background="#6c757d" CornerRadius="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Войдите в аккаунт" Foreground="#fff" TextAlignment="Center" FontSize="16" Margin="0 0 0 40"/>
                <Label Content="Имя пользователя" Foreground="#fff"/>
                <TextBox FontSize="16" x:Name="username" Width="200" Margin="0 0 0 40" Padding="20 2" Background="LightGray" Foreground="#e85d04" FontWeight="DemiBold"/>
                <Label Content="Пароль" Foreground="#fff"/>
                <PasswordBox FontSize="16" Background="LightGray" Width="200" Margin="0 0 0 40" Padding="20 2" x:Name="password" Foreground="#e85d04" FontWeight="DemiBold"/>
                <Button Click="Button_Click" Content="Войти" Background="#e85d04" Foreground="#fff" Height="30"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
